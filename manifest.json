{
  "name": "Gitlab MR shortcuts",
  "version": "1.0.1",
  "description": "Chrome extension to easily access gitlab projects and merge requests.",
  "manifest_version": 3,
  "author": "Zineb Elouarradi",
  "action":{
    "default_popup": "src/index.html",
    "default_title": "Gitlab MR shortcuts"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://gitlab.com/*"
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
